<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_willkommen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textSize="25dp"
        android:textColor="#0000FF"
        android:textAlignment="center"
        android:text="@string/willkommen"/>

    <EditText
        android:id="@+id/euro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_willkommen"
        android:layout_centerHorizontal="true"
        android:lines="1"
        android:hint="@string/hint_euro"/>

    <EditText
        android:id="@+id/bitcoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/euro"
        android:layout_centerHorizontal="true"
        android:lines="1"
        android:hint="@string/hint_bitcoin"/>

    <Button
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bitcoin"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_change"/>

</RelativeLayout>
